{
  "version": 2,
  "functions": {
    "api/books.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/read.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/generate-music.js": {
      "memory": 3008,
      "maxDuration": 60
    },
    "api/admin-login.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/books", "destination": "/api/books.js" },
    { "source": "/api/read", "destination": "/api/read.js" },
    { "source": "/api/read/:id", "destination": "/api/read.js" },
    { "source": "/api/generate-music", "destination": "/api/generate-music.js" },
    { "source": "/api/admin/login", "destination": "/api/admin-login.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "framework": "create-react-app",
  "github": {
    "silent": true
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "same-origin"
        }
      ]
    }
  ]
} 